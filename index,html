<script>
    // Configura√ß√£o de Persist√™ncia
    const LIMITE_PADRAO = 50000.00;
    let dadosSessao = {
        saldoDisponivel: LIMITE_PADRAO,
        saldoUtilizado: 0.00,
        historico: []
    };

    // Carregar do LocalStorage ao iniciar
    function carregarDados() {
        const salvos = localStorage.getItem('ativacao_elite_data');
        if (salvos) {
            dadosSessao = JSON.parse(salvos);
        }
        renderizarUI();
    }

    function salvarDados() {
        localStorage.setItem('ativacao_elite_data', JSON.stringify(dadosSessao));
    }

    function renderizarUI() {
        document.getElementById('saldo-disponivel').textContent = dadosSessao.saldoDisponivel.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        document.getElementById('total-utilizado').textContent = 'R$ ' + dadosSessao.saldoUtilizado.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        
        const container = document.getElementById('statement-list');
        if (dadosSessao.historico.length === 0) {
            container.innerHTML = '<div style="text-align: center; padding: 40px; color: var(--text-dim); font-size: 14px;">Sem movimenta√ß√µes no extrato.</div>';
        } else {
            container.innerHTML = '';
            dadosSessao.historico.forEach(item => {
                const div = document.createElement('div');
                div.className = 'statement-item';
                div.innerHTML = `
                    <div class="st-icon">üì§</div>
                    <div class="st-info">
                        <div class="st-title">PIX p/ ${item.nome}</div>
                        <div class="st-meta">${item.data} ‚Ä¢ ID: ${item.id.substring(0,8)}</div>
                    </div>
                    <div class="st-amount">- R$ ${item.valor.toLocaleString('pt-BR', { minimumFractionDigits: 2 })}</div>
                `;
                container.appendChild(div);
            });
        }
    }

    // M√°scara de Moeda
    const valorInput = document.getElementById('valor');
    valorInput.addEventListener('input', (e) => {
        let v = e.target.value.replace(/\D/g, '');
        v = (v / 100).toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        e.target.value = v;
    });

    const form = document.getElementById('pix-form');
    const loader = document.getElementById('loader');
    const loaderMsg = document.getElementById('loader-msg');
    const receipt = document.getElementById('receipt');

    form.addEventListener('submit', e => {
        e.preventDefault();
        const valor = parseFloat(valorInput.value.replace(/\./g, '').replace(',', '.'));
        const nomeDest = document.getElementById('nome').value;

        if (valor <= 0 || isNaN(valor)) return alert("Valor inv√°lido.");
        if (valor > dadosSessao.saldoDisponivel) return alert("Limite de cr√©dito insuficiente.");

        processar(valor, nomeDest);
    });

    function processar(v, nome) {
        loader.style.display = 'flex';
        const msgs = ["VALIDANDO TOKEN...", "ANALISANDO CR√âDITO...", "ENVIANDO PIX...", "SUCESSO!"];
        let i = 0;
        const interval = setInterval(() => {
            loaderMsg.textContent = msgs[i];
            i++;
            if (i >= msgs.length) {
                clearInterval(interval);
                concluirTransacao(v, nome);
            }
        }, 800);
    }

    function concluirTransacao(v, nome) {
        const txId = 'ELITE' + Math.random().toString(36).substr(2, 12).toUpperCase();
        const dataH = new Date().toLocaleString('pt-BR');

        // Atualizar L√≥gica
        dadosSessao.saldoDisponivel -= v;
        dadosSessao.saldoUtilizado += v;
        dadosSessao.historico.unshift({
            id: txId,
            nome: nome,
            valor: v,
            data: dataH
        });

        // Persistir e Atualizar
        salvarDados();
        renderizarUI();

        // Recibo
        document.getElementById('rec-valor').textContent = 'R$ ' + v.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        document.getElementById('rec-nome').textContent = nome;
        document.getElementById('rec-id').textContent = txId;
        document.getElementById('rec-data').textContent = dataH;

        loader.style.display = 'none';
        receipt.style.display = 'block';
    }

    function closeReceipt() {
        receipt.style.display = 'none';
        form.reset();
    }

    function limparSessao() {
        if(confirm("Deseja realmente limpar todo o hist√≥rico e resetar o saldo?")) {
            localStorage.removeItem('ativacao_elite_data');
            location.reload();
        }
    }

    // Inicializar
    window.onload = carregarDados;
</script>

</body>
