<script>
    let saldoDisponivel = 2000000.00;
    let saldoUtilizado = 0.00;

    // M√°scara de Moeda (Real)
    const valorInput = document.getElementById('valor');
    valorInput.addEventListener('input', (e) => {
        let v = e.target.value.replace(/\D/g, '');
        v = (v / 100).toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        e.target.value = v;
    });

    const form = document.getElementById('pix-form');
    const loader = document.getElementById('loader');
    const loaderMsg = document.getElementById('loader-msg');
    const receipt = document.getElementById('receipt');

    form.addEventListener('submit', e => {
        e.preventDefault();
        
        const valor = parseFloat(valorInput.value.replace(/\./g, '').replace(',', '.'));
        const nomeDest = document.getElementById('nome').value;

        if (isNaN(valor) || valor <= 0) return alert("Insira um valor v√°lido.");
        if (valor > saldoDisponivel) return alert("Saldo de cr√©dito insuficiente.");

        processarTransferencia(valor, nomeDest);
    });

    function processarTransferencia(v, nome) {
        loader.style.display = 'flex';
        const msgs = ["CRIPTOGRAFANDO...", "AUTORIZANDO CR√âDITO...", "LIBERANDO PIX...", "FINALIZANDO..."];
        let step = 0;

        const interval = setInterval(() => {
            loaderMsg.textContent = msgs[step];
            step++;
            if (step >= msgs.length) {
                clearInterval(interval);
                concluir(v, nome);
            }
        }, 900);
    }

    function concluir(v, nome) {
        // Atualiza L√≥gica de Saldo
        saldoDisponivel -= v;
        saldoUtilizado += v;

        // Atualiza UI principal
        document.getElementById('saldo-disponivel').textContent = saldoDisponivel.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        document.getElementById('total-utilizado').textContent = 'R$ ' + saldoUtilizado.toLocaleString('pt-BR', { minimumFractionDigits: 2 });

        // Gera Comprovante
        const txId = 'ATV-' + Math.random().toString(36).substr(2, 10).toUpperCase();
        const dataH = new Date().toLocaleString('pt-BR');

        document.getElementById('rec-valor').textContent = 'R$ ' + v.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
        document.getElementById('rec-nome').textContent = nome;
        document.getElementById('rec-id').textContent = txId;
        document.getElementById('rec-data').textContent = dataH;

        // Adiciona ao Extrato
        adicionarExtrato(nome, v, dataH);

        loader.style.display = 'none';
        receipt.style.display = 'block';
    }

    function adicionarExtrato(nome, v, data) {
        const container = document.getElementById('statement-list');
        if (container.innerText.includes("Nenhuma movimenta√ß√£o")) container.innerHTML = '';

        const item = document.createElement('div');
        item.className = 'statement-item';
        item.innerHTML = `
            <div class="st-icon">üì§</div>
            <div class="st-info">
                <div class="st-title">Sa√≠da de Cr√©dito via PIX</div>
                <div class="st-meta">${nome} ‚Ä¢ ${data}</div>
            </div>
            <div class="st-amount">- R$ ${v.toLocaleString('pt-BR', { minimumFractionDigits: 2 })}</div>
        `;
        container.prepend(item);
    }

    function closeReceipt() {
        receipt.style.display = 'none';
        form.reset();
    }
</script>

